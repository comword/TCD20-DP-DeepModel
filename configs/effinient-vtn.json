{
  "name": "DP_Posture",
  "n_gpu": 1,
  "log_config": "src/logger/logger_config.json",
  "save_dir": "saved/",
  "arch": {
    "type": "VTNBuilder",
    "args": {
      "backbone": "efficientnet-b0",
      "n_classes": 16,
      "input_shape": [3, 224, 224]
    }
  },
  "data_loader": {
    "type": "VideoDataLoader",
    "args": {
      "data_path": "data/anonymisedVideos",
      "batch_size": 700,
      "shuffle": false,
      "validation_split": 0.1,
      "num_workers": 1,
      "resize_to": [224, 224]
    }
  },
  "loss": "cross_entropy",
  "metrics": ["accuracy"],
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.0005,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "lr_scheduler": {
    "type": "PolynomialLR",
    "args": {
      "step_size": 10,
      "iter_max": 500,
      "power": 0.9
    }
  },
  "trainer": {
    "type": "VideoTrainer",
    "args": {},
    "epochs": 100,
    "save_period": 10,
    "verbosity": 2,
    "monitor": "max val_accuracy",
    "early_stop": 15,
    "tensorboard": false
  }
}

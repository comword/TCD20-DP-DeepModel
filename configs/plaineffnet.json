{
    "name": "DP_Posture_Plain",
    "n_gpu": 1,
    "save_dir": "saved/",
    "arch": {
      "type": "PlainEffNet",
      "args": {
        "backbone": "EfficientNetB0",
        "n_classes": 16,
        "MLP_DIM": 200,
        "MLP_DROPOUT_RATE": 0.5
      }
    },
    "data_loader": {
      "type": "FrameDataLoaderTF",
      "args": {
        "data_path": "data/anonymisedVideos",
        "batch_size": 3,
        "shuffle": true,
        "validation_split": 0.1,
        "resolution": [224, 224],
        "batch_frame": 15,
        "batch_second": 5,
        "num_clips": 12,
        "resize_fac": [0.8, 1.2],
        "mean_norm": [0.45, 0.45, 0.45],
        "std_norm": [0.225, 0.225, 0.225]
      }
    },
    "trainer": {
        "epochs": 50,
        "save_period": 10,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "early_stop": 10,
        "lr_dmodel": 256,
        "warmup_steps": 3000,
        "tensorboard": true
      }
}
  
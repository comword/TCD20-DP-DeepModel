{
    "name": "DP_Posture",
    "n_gpu": 1,
    "save_dir": "saved/",
    "arch": {
      "type": "VTNBuilder",
      "args": {
        "backbone": "EfficientNetB0",
        "temporal": "VTNDistilBertLayer",
        "input_shape": [3, 15, 224, 224],
        "n_classes": 16,
        "MLP_DIM": 768,
        "HIDDEN_DIM": 768,
        "NUM_ATTENTION_HEADS": 12,
        "NUM_HIDDEN_LAYERS": 3,
        "INTERMEDIATE_SIZE": 3072,
        "MLP_DROPOUT_RATE": 0.4,
        "MAX_POSITION_EMBEDDINGS": 288
      }
    },
    "data_loader": {
      "type": "VideoDataLoaderTF",
      "args": {
        "data_path": "data/orig-front-videos",
        "mode": "all",
        "batch_size": 3,
        "shuffle": true,
        "validation_split": 0.1,
        "resolution": 224,
        "batch_frame": 15,
        "sampling_rate": 8,
        "num_clips": 8,
        "resize_to": [256, 340],
        "mean_norm": [0.45, 0.45, 0.45],
        "std_norm": [0.225, 0.225, 0.225]
      }
    },
    "trainer": {
        "epochs": 50,
        "save_period": 10,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "early_stop": 10,
        "lr_dmodel": 200,
        "warmup_steps": 2000,
        "tensorboard": true
      }
}
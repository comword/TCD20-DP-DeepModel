{
    "name": "DP_Posture",
    "n_gpu": 1,
    "save_dir": "saved/",
    "arch": {
      "type": "VTNBuilder",
      "args": {
        "backbone": "EfficientNetB0",
        "temporal": "VTNLongformerLayer",
        "input_shape": [3, 16, 224, 224],
        "n_classes": 16,
        "MLP_DIM": 384,
        "HIDDEN_DIM": 384,
        "NUM_ATTENTION_HEADS": 6,
        "NUM_HIDDEN_LAYERS": 3,
        "INTERMEDIATE_SIZE": 1534,
        "MLP_DROPOUT_RATE": 0.4,
        "MAX_POSITION_EMBEDDINGS": 288
      }
    },
    "data_loader": {
      "type": "VideoDataLoaderTF",
      "args": {
        "data_path": "data/orig-front-videos",
        "mode": "all",
        "batch_size": 3,
        "shuffle": true,
        "validation_split": 0.1,
        "resolution": 224,
        "batch_frame": 16,
        "sampling_rate": 8,
        "num_clips": 9,
        "resize_to": [256, 340]
      }
    },
    "trainer": {
        "epochs": 100,
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "lr_dmodel": 100,
        "warmup_steps": 4000,
        "tensorboard": true
      }
}